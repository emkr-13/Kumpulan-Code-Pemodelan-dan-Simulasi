{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGLEW",
                "-lglfw",
                "-lGL",
                "-lX11",
                "-lXxf86vm",
                "-lXrandr",
                "-lpthread",
                "-lXi",
                "-ldl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ],
    "version": "2.0.0",
    "compounds": []
}
